{
  "name": "dvc-blog",
  "private": true,
  "description": "Blog for dvc.org",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "serve": "gatsby serve",
    "start": "yarn develop",
    "typecheck": "tsc --noEmit",
    "lint-ts": "tslint --project .",
    "lint-css": "stylelint \"src/**/*.css\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn prettier --write",
      "yarn lint-ts",
      "git add"
    ],
    "*.css": [
      "yarn stylelint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "gatsby": "^2.13.73",
    "gatsby-image": "^2.2.10",
    "github-markdown-css": "^3.0.1",
    "prismjs": "^1.17.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-helmet": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@types/classnames": "^2.2.9",
    "@types/react-helmet": "^5.0.9",
    "eslint-plugin-graphql": "^3.0.3",
    "gatsby-plugin-feed": "^2.3.7",
    "gatsby-plugin-google-analytics": "^2.1.8",
    "gatsby-plugin-manifest": "^2.2.6",
    "gatsby-plugin-react-helmet": "^3.1.4",
    "gatsby-plugin-sharp": "^2.2.13",
    "gatsby-plugin-tslint": "^0.0.2",
    "gatsby-plugin-typescript": "^2.1.5",
    "gatsby-remark-copy-linked-files": "^2.1.7",
    "gatsby-remark-images": "^3.1.13",
    "gatsby-remark-prismjs": "^3.3.6",
    "gatsby-remark-responsive-iframe": "^2.2.5",
    "gatsby-remark-smartypants": "^2.1.3",
    "gatsby-source-filesystem": "^2.1.11",
    "gatsby-transformer-remark": "^2.6.15",
    "gatsby-transformer-sharp": "^2.2.7",
    "graphql": "^14.5.4",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-loader": "^3.5.4",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.6.2"
  }
}
